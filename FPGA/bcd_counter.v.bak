module bcd_counter(
	bcd,
	increment,
	carry_out,
	reset
);

//  Ports

input					reset;
output				carry_out;
input					increment;
output	[3:0]		bcd;

//  You should probably register this. (get it?)

//  Teh Logikz

initial
	fork
		output = 4'h0;
		carry_out = 1'b1;
	join

always @(posedge clk)
	begin
		casex (bcd)
			4'h9		:	bcd = 4'h0;
			4'hx 		:	bcd = bcd + 1;
		endcase
		if (bcd == 4'h0)
			carry_out = 1'b1;
		else
			carry_out = 1'b0;
	end

always @(reset)
	fork
		output = 4'h0;
		carry_out = 1'b1;
	join
	
endmodule
