module count_minutes(
	reset,
	manual_inc,
	increment,
	ones_digit,
	tens_digit,
	count_out
);

// port declarations
input					reset;
input					increment;
output	[3:0]		ones_digit;
output	[3:0]		tens_digit;
output 				count_out;

// wire declarations
wire seconds_carry;
reg module_reset;

// teh logikz

initial module_reset <= 0;

bcd_counter(module_reset, increment, ones_digit, seconds_carry);
bcd_counter(module_reset, seconds_carry, tens_digit, count_out);

always module_reset <= (tens_digit == 4'h6) ? 1 : reset;

endmodule
